#include <winver.h>

VS_VERSION_INFO VERSIONINFO

FILEVERSION     @TARGET_VERSION_MAJOR@,@TARGET_VERSION_MINOR@,@TARGET_VERSION_PATCH@,@TARGET_VERSION_BUILD@
PRODUCTVERSION  @TARGET_PRODUCT_VERSION_MAJOR@,@TARGET_PRODUCT_VERSION_MINOR@,@TARGET_PRODUCT_VERSION_PATCH@,@TARGET_PRODUCT_VERSION_BUILD@
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        VALUE "CompanyName",        "@TARGET_COMPANY@"
        VALUE "ProductName",        "@TARGET_PRODUCT@\0"
        VALUE "ProductVersion",     "@TARGET_PRODUCT_VERSION_MAJOR@.@TARGET_PRODUCT_VERSION_MINOR@.@TARGET_PRODUCT_VERSION_PATCH@.@TARGET_PRODUCT_VERSION_BUILD@"
        VALUE "FileDescription",    "@TARGET_DESCRIPTION@\0"
        VALUE "FileVersion",        "@TARGET_VERSION_MAJOR@.@TARGET_VERSION_MINOR@.@TARGET_VERSION_PATCH@.@TARGET_VERSION_BUILD@"
        VALUE "InternalName",       "@TARGET_PRODUCT@\0"
        VALUE "LegalCopyright",     "@TARGET_COPYRIGHT@"
        VALUE "OriginalFilename",   "@TARGET_FILENAME@\0"
        VALUE "RepositoryVersion",  "@TARGET_VERSION_REPO@"
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1252 // 1252 = 0x04E4
    END
END

IDI_ICON1 ICON "@TARGET_ICON_PATH@"
